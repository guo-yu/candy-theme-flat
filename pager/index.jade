- if (page.current <= page.max)
    ul#pager.pagination.clearfix
        - if (page.current != 1)
            li.previous
                a(href="/page/#{page.current - 1}",title="上一页")
                    i.icon-chevron-left
        - else
            li.previous.disabled
                a(href="#")
                    i.icon-chevron-left
        li.current
            span #{page.current}/#{page.max}
        - if (page.current != page.max)
            li.next
                a(href="/page/#{page.current + 1}",title="下一页")
                    i.icon-chevron-right
        - else
            li.next.disabled
                a(href="#")
                    i.icon-chevron-right